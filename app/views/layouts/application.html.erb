<!DOCTYPE html>
<html>
<head>
  <title>Dive14exam</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
</head>
<body>
<header>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <i class="fa fa-instagram"><%= link_to "Picture", root_path, class:"navbar-brand" %></i>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
      </button>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
          <ul class="dropdown-menu">
          	<% if user_signed_in? %>
            	<li><%= link_to '新規投稿', new_picture_path %></li>
    　　　　  　　<li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
　　　　      <li><%= link_to 'マイページ', edit_user_registration_path %></li>
　　　　    <% else %>
　　　　      <li><%= link_to 'ログイン', new_user_session_path %></li>
　　　　      <li><%= link_to 'サインアップ', new_user_registration_path %></li>
　　　　    <% end %>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

    </div>
</header>
<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 contents">
	
<%= yield %>

</div>
<footer>
</footer>
</body>
</html>
